<Window x:Class="Colors.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Colors"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" MinWidth="320" MinHeight="200"
        KeyDown="Window_KeyDown" Closed="Window_Closed">
    <DockPanel>
     
        <Slider x:Name="SliderB" Margin="10,10,10,10" DockPanel.Dock="Bottom"
                ValueChanged="Sliders_ValueChanged" Maximum="255"/>
        <Slider x:Name="SliderG" Margin="10,10,10,10" DockPanel.Dock="Bottom"
                ValueChanged="Sliders_ValueChanged" Maximum="255"/>
        <Slider x:Name="SliderR" Margin="10,10,10,10" DockPanel.Dock="Bottom"
                ValueChanged="Sliders_ValueChanged" Maximum="255"/>
        <Rectangle x:Name="Rectangle" Margin="10,10,10,0" Fill="Black"/>
    </DockPanel>
</Window>
